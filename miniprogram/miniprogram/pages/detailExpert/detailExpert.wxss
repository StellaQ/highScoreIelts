/* 容器 */
.containerExpert {
    padding: 10px;
    background-color: #F5F7FA;
    min-height: 100vh;
  }
  
  /* 头部样式 */
  .header {
    background: #fff;
    border-radius: 16px;
    padding: 16px 24px;
    margin-bottom: 16px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    width: calc(100% - 48px);
  }
  
  .topic-title {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .topic-name {
    font-size: 20px;
    font-weight: 600;
    display: block;
  }
  
  .topic-name-cn {
    font-size: 16px;
    color: #86909C;
    margin-top: 4px;
    display: block;
  }
  
  .topic-status {
    padding: 6px 16px;
    border-radius: 100px;
    font-size: 14px;
    font-weight: 500;
  }
  
  .status-new {
    background: #E8F7E6;
    color: #18A058;
  }
  
  .status-review {
    background: #E8FFFB;
    color: #13C2C2;
  }
  
  .status-done {
    background: #FFE4BA;
    color: #FF8F1F;
  }
  
  /* 问题卡片样式 */
  .question-section {
    display: flex;
    flex-direction: column;
    gap: 16px;
    width: calc(100% - 48px);
  }

  /* state=0 的卡片样式 */
  .state0 .question-card {
    width: 100%;
    padding: 24px;
    background: #fff;
    border-radius: 16px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    position: relative;
    min-height: 300px;
  }
  
  /* state=1和state=2的卡片样式 */
  .state1 .question-card {
    width: 100%;
    padding: 24px;
    background: #fff;
    border-radius: 16px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    position: relative;
    min-height: 300px;
    max-height: 320px;
    overflow-y: auto;
  }

  .question-title {
    font-size: 18px;
    font-weight: 600;
    margin-bottom: 12px;
    color: #333;
  }

  .question-title-cn {
    font-size: 16px;
    color: #666;
    margin-bottom: 16px;
  }

  .answer-input {
    width: 100%;
    height: 120px;
    padding: 12px;
    border: 1px solid #E5E6EB;
    border-radius: 8px;
    font-size: 16px;
    line-height: 1.5;
    margin-bottom: 16px;
  }

  .submit-btn {
    background: #1890FF;
    color: #fff;
    border: none;
    padding: 8px 16px;
    border-radius: 4px;
    font-size: 14px;
  }

  .ai-feedback {
    margin-top: 16px;
    padding: 16px;
    background: #F6F6F6;
    border-radius: 8px;
  }

  .ai-feedback-content {
    font-size: 16px;
    line-height: 1.6;
    color: #333;
  }

  /* 卡片翻转效果 */
  .card-inner {
    position: relative;
    width: 100%;
    height: 100%;
    transition: transform 0.6s;
    transform-style: preserve-3d;
  }

  .flipped .card-inner {
    transform: rotateY(180deg);
  }

  .card-front, .card-back {
    position: absolute;
    width: 100%;
    height: 100%;
    backface-visibility: hidden;
  }

  .card-back {
    transform: rotateY(180deg);
  }

  .question-tip {
    font-size: 14px;
    color: #666;
    margin-top: 8px;
  }

  .answer-content {
    font-size: 16px;
    line-height: 1.6;
    color: #333;
  }

  /* 复习时间选择 */
  .review-section {
    margin-top: 24px;
    padding: 24px;
    background: #fff;
    border-radius: 16px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  }

  .review-title {
    font-size: 18px;
    font-weight: 600;
    color: #333;
    margin-bottom: 16px;
    display: block;
  }

  .review-options {
    display: flex;
    flex-wrap: wrap;
    gap: 12px;
    margin-bottom: 16px;
  }

  .review-option {
    padding: 8px 16px;
    background: #F5F7FA;
    border-radius: 100px;
    font-size: 14px;
    color: #666;
  }

  .review-option.selected {
    background: #1890FF;
    color: #fff;
  }

  .next-review-time {
    font-size: 16px;
    color: #333;
    margin-bottom: 16px;
  }

  .confirm-btn {
    width: 100%;
    background: #1890FF;
    color: #fff;
    border: none;
    padding: 12px;
    border-radius: 8px;
    font-size: 16px;
  }

  .confirm-btn[disabled] {
    background: #E5E6EB;
    color: #C9CDD4;
  }