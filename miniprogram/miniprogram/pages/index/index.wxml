<view class="container">
  <!-- 用户信息区域 -->
  <view class="user-card">
    <view class="user-info">
      <image class="avatar" src="{{userInfo.avatarUrl}}" bindtap="updateUserProfile"></image>
      <view class="user-details">
        <text class="nickname" bindtap="updateUserProfile">{{userInfo.nickname}}</text>
        <view class="vip-badge" wx:if="{{userInfo.isVip}}">
          <image src="./../../assets/vip5.png" class="vip-icon"></image>
        </view>
      </view>
    </view>
    <view class="question-count">
      <text>今日可刷题次数：</text>
      <text class="count">{{userInfo.remainingQuestions}} / 30</text>
    </view>
  </view>

  <!-- 分享小程序 -->
  <view class="share-section">
    <text class="share-title">🎉 邀请好友得更多刷题机会 🎉</text>
    <view class="share-buttons">
      <button open-type="share" class="share-btn">分享到好友</button>
      <button open-type="share" class="share-btn">分享到微信群</button>
      <button open-type="share" class="share-btn">分享到朋友圈</button>
    </view>
    <view class="progress-container">
      <text>已邀请：{{userInfo.inviteCount}} 人</text>
      <progress percent="{{userInfo.inviteCount * 10}}" show-info="true"/>
    </view>
  </view>

  <!-- 其他功能 -->
  <view class="footer-links">
    <view class="feedback" bindtap="reportIssues">
      <van-icon name="question" color="#1989fa" size="30px"/> 建议及意见
    </view>
    <view class="about-us">
      <text>关于我们</text>
    </view>
  </view>
</view>
<tab-bar active="0"></tab-bar>