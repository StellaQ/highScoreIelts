page {
  background-color: #F5F7FA;
  height: 100vh;
  overflow: hidden;
}

.outer-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.inner-container {
  flex: 1;
  padding: 20px;
  padding-bottom: calc(env(safe-area-inset-bottom) + 120rpx);
  display: flex;
  flex-direction: column;
  background-color: #F5F7FA;
}

.header {
  padding: 16px 0;
  margin-bottom: 24px;
}

.header-title {
  font-size: 24px;
  color: #1D2129;
  font-weight: 500;
}

.hot-topics {
  display: flex;
  align-items: center;
  gap: 8px;
  /* margin-bottom: 14px; */
}

.hot-icon {
  width: 20px;
  height: 20px;
}

.section-title {
  font-size: 18px;
  font-weight: 600;
  color: #1D2129;
}

.level-cards {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  gap: 12px;
  /* margin-bottom: 16px; */
  min-height: 0;
}

.level-card {
  background: #FFFFFF;
  border-radius: 16px;
  padding: 15px;
  display: flex;
  align-items: center;
  gap: 20px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

.level-card.basic {
  border-left: 4px solid #18A058;
}

.level-card.advanced {
  border-left: 4px solid #13C2C2;
}

.level-card.expert {
  border-left: 4px solid #FF8F1F;
}

.level-icon {
  width: 60px;
  height: 60px;
  border-radius: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.level-icon image {
  width: 32px;
  height: 32px;
}

.basic .level-icon {
  background: rgba(24, 160, 88, 0.1);
}

.advanced .level-icon {
  background: rgba(19, 194, 194, 0.1);
}

.expert .level-icon {
  background: rgba(255, 143, 31, 0.1);
}

.level-info {
  flex: 1;
}

.level-title {
  font-size: 16px;
  font-weight: 600;
  color: #1D2129;
  margin-bottom: 8px;
}

.level-desc {
  font-size: 12px;
  color: #86909C;
}

.practice-btn {
  padding: 8px 24px;
  border-radius: 100px;
  font-size: 14px;
  font-weight: 500;
  border: none;
  color: #FFFFFF;
  line-height: 1.5;
}

.basic .practice-btn {
  background: #18A058;
}

.advanced .practice-btn {
  background: #13C2C2;
}

.expert .practice-btn {
  background: #FF8F1F;
}

.features {
  margin-top: auto;
  /* padding-bottom: 20px; */
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 12px;
}

.feature-card {
  background: #FFFFFF;
  border-radius: 16px;
  padding: 14px;
  text-align: center;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

.feature-icon {
  width: 48px;
  height: 48px;
  margin-bottom: 16px;
}

.feature-title {
  font-size: 14px;
  font-weight: 600;
  color: #1D2129;
  margin-bottom: 8px;
}

.feature-desc {
  font-size: 12px;
  color: #86909C;
}