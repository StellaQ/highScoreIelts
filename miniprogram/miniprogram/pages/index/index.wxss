  padding: 15rpx 25rpx; /* 增加内边距 */
  font-size: 30rpx; /* 增加字体大小 */
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1); /* 增加按钮阴影 */
}

/* 进度条 */
.progress-container {
  margin-top: 25rpx;
  text-align: center;
}

/* 底部功能 */
.footer-links {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  margin-top: 35rpx;
  padding: 20rpx;
