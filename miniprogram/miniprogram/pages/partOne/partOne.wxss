page {
  height: 100%;
}

.disabled {
  opacity: 0.5;
  color: grey;
  pointer-events: none;
}

.complete-tag {
  position: absolute;
  left: 30%;
  top: -20px;
  z-index: 1;
  display: flex;
}

.img-icon {
  width: 40px;
  height: 40px;
}

.img-icon2 {
  width: 70px;
  height: 70px;
}

.img-icon3 {
  width: 34px;
  height: 34px;
}

.subCategoryHolder{
  display: flex;
  justify-content: space-between;
  padding-bottom: 10px;
  margin-bottom: 10px;
  color: #333;
}

.cell-content{
  width: 120px;
  height: 20px;
}

.progress-bar {
  width: 100%;
  height: 20px;
  border-radius: 10px;
  overflow: hidden;
  background: transparent;
}

.progress-bar-inner {
  width: 100%;
  height: 100%;
  background: linear-gradient(to right, #4caf50 var(--progress), transparent var(--progress));
}

.page-title {
  text-align: center;
  font-size: 20px;
  font-weight: bold;
  color: #333;
  margin: 20px 0;
}

.card {
  background-color: #fff;
  border-radius: 10px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  padding: 15px;
  margin-bottom: 15px;
  transition: transform 0.2s, box-shadow 0.2s;
}

.card-header {
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 10px;
}

.card-body {
  font-size: 14px;
  color: #555;
  display: flex;
  justify-content: space-between;
}

.card-edit{
  margin: 10px 0;
  font-size: 14px;
  color: #555;
}

.card-footer {
  margin-top: 15px;
  text-align: justify;
  font-size: 16px;
}

.card-container {
  display: flex;
  flex-wrap: wrap;
  gap: 15px;
  justify-content: space-between;
}

.memory-reminder-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 10px;
}

.memory-reminder {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 10px;
}

.memory-box {
  padding: 8px 15px;
  border-radius: 5px;
  font-size: 14px;
  margin: 0 5px;
  background-color: #fff;
  color: #333;
  border: 1px solid #ddd;
  transition: all 0.2s ease-in-out;
}

.memory-box.selected {
  background-color: #1989fa;
  color: #fff;
  border: none;
}

.reminder-info {
  position: absolute;
  right: 10px;
} 
/* 翻转卡片效果 */
.flip-card {
  perspective: 1000px;
  width: 100%;
  height: 300px;
  cursor: pointer;
}
 
.flip-card-inner {      
  position: relative;
  width: 100%;
  height: 100%;
  text-align: center;
  transition: transform 0.6s;
  transform-style: preserve-3d;
}
 
.flip-card.flipped .flip-card-inner {
  transform: rotateY(180deg);
}
 
.flip-card-front, .flip-card-back {
  position: absolute;
  width: 100%;
  height: 100%;
  -webkit-backface-visibility: hidden;
  backface-visibility: hidden;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  /* padding: 15px; */
  border-radius: 10px;
  box-shadow: 0 4px 8px rgba(0,0,0,0.1);
  background-color: white;
}
 
.flip-card-back {
  transform: rotateY(180deg);
  background-color: #f8f9fa;
}
.card-header-note{
  color: #999;
  font-size: 16px;
}
.card-body-flip {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 16px;
  padding: 10px;
  overflow-y: auto;
  text-align: justify;
}
 
.flip-hint {
  font-size: 12px;
  color: #888;
  padding: 5px;
  /* background-color: #f1f1f1; */
  border-radius: 5px;
  margin-top: 10px;
}       