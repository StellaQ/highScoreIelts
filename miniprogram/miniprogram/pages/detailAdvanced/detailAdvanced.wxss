/* 容器 */
.containerAdvanced {
  padding: 10px;
  background-color: #F5F7FA;
  min-height: 100vh;
}

/* 头部样式 */
.header {
  background: #fff;
  border-radius: 16px;
  padding: 16px 24px 50px 24px;
  margin-bottom: 16px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  width: calc(100% - 48px);
  position: relative;
}

.topic-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.topic-name {
  font-size: 20px;
  font-weight: 600;
  display: block;
  text-align: justify;
}

.topic-name-cn {
  font-size: 16px;
  color: #86909C;
  margin-top: 4px;
  display: block;
}

.topic-status {
  padding: 6px 16px;
  border-radius: 100px;
  font-size: 14px;
  font-weight: 500;
  position: absolute; right: 24px; bottom: 10px;
}

.status-new {
  background: #E8F7E6;
  color: #18A058;
}

.status-review {
  background: #E8FFFB;
  color: #13C2C2;
}

.status-done {
  background: #FFE4BA;
  color: #FF8F1F;
}
.question-points{
  width: 100%;
  box-sizing: border-box;
  background: #fff;
  border-radius: 16px;
  padding: 24px;
  margin-bottom: 16px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}
.question-point{
  margin-bottom: 14px;
  font-size: 16px;
  font-weight: 500;
}
/* 问题卡片样式 */
.question-section {
  width: 100%;
  display: flex;
  flex-direction: column;
}

/* state=0 的卡片样式 */
.state0 .question-card {
  width: 100%;
  box-sizing: border-box;
  padding: 14px 24px;
  background: #fff;
  border-radius: 16px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  position: relative;
  margin-bottom: 16px;
}

.state1 .question-card {
  width: 100%;
  box-sizing: border-box;
  padding: 24px;
  background: #fff;
  border-radius: 16px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  position: relative;
  height: 400px;
}

.question-title {
  font-size: 18px;
  font-weight: 600;
  margin-bottom: 6px;
  color: #333;
  text-align: justify;
}

.question-title-cn {
  font-size: 16px;
  color: #666;
  margin-bottom: 6px;
}

.answer-input {
  width: 100%;
  height: 60px;
  /* padding: 12px; */
  border: 1px solid #E5E6EB;
  border-radius: 8px;
  font-size: 16px;
  line-height: 1.5;
  /* margin-bottom: 16px; */
}

.submit-btn {
  background: #1890FF;
  color: #fff;
  border: none;
  padding: 8px 16px;
  border-radius: 4px;
  font-size: 14px;
}

.ai-feedback {
  width: 100%;
  background: #fff;
  border-radius: 16px;
  display: flex;
  justify-content: center;
}
.feedback-container{
  position: relative;
  padding: 16px;
  padding-bottom: 60px; /* 增加底部间距，为播放按钮留出更多空间 */
  width: calc(100% - 48px);
  margin: 20px 0;
  padding: 0 5px;
  background: #F8F9FC;
  border-radius: 16px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.ai-feedback-content {
  color: #4E5969;
  font-size: 16px;
  font-weight: 500;
  line-height: 1.6;
  text-align: justify;
}

/* 卡片翻转效果 */
.card-inner {
  position: relative;
  width: 100%;
  height: 100%;
  transition: transform 0.6s;
  transform-style: preserve-3d;
}

.flipped .card-inner {
  transform: rotateY(180deg);
}

.card-front, .card-back {
  position: absolute;
  width: 100%;
  height: 100%;
  backface-visibility: hidden;
  font-size: 20px;
  font-weight: 500;
  text-align: justify;
  line-height: 1.6;
  overflow: auto;
}

.card-back {
  position: absolute;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding: 16px;
  backface-visibility: hidden;
  overflow: auto;
  transform: rotateY(180deg);
  display: flex;
  flex-direction: column;
}

.card-back .audio-container {
  position: absolute;
  bottom: 12px;
  right: 2px; /* 播放按钮单独右移 */
  z-index: 1;
}

.card-back .answer-content {
  font-size: 14px;
  line-height: 1.6;
  color: #4E5969;
  display: block;
  margin-bottom: 40px; /* 为播放按钮留出空间 */
  padding-right: 16px; /* 内容右侧保持原有间距 */
}

.card-front{
  display: flex;
  align-items: center;
}
.question-tip {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  font-size: 14px;
  color: #666;
  text-align: center;
}
.button-container {
  width: 100%;
  display: flex;
  justify-content: center;
}

.answer-content {
  font-size: 14px;
  line-height: 1.6;
  color: #4E5969;
  display: block;
  margin-bottom: 16px;
}

/* 复习时间选择 */
.review-section {
  background: #fff;
  border-radius: 16px;
  padding: 24px;
  margin-top: 16px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  width: calc(100% - 48px);
}

.review-title {
  font-size: 16px;
  font-weight: 500;
  margin-bottom: 12px;
  display: block;
}

.review-options {
  display: flex;
  flex-wrap: no-wrap;
  justify-content: space-between;
  /* gap: 12px; */
  margin-bottom: 16px;
}

.review-option {
  flex: 0 0 auto;
  padding: 8px 8px;
  border-radius: 100px;
  font-size: 14px;
  background: #F2F7FF;
  color: #86909C;
  text-align: center;
  transition: all 0.3s ease;
}

/* state=0 的选项样式 */
.state0 .review-option.selected {
  background: #F2F7FF;
  color: #18A058;
}
/* state=1 的选项样式 */
.state1 .review-option.selected {
  background: #F2F7FF;
  color: #13C2C2;
}
.next-review-time {
  height: 14px;
  line-height: 14px;
  font-size: 12px;
  color: #86909C;
  margin-top: 16px;
  display: flex;
  align-items: center;
  gap: 4px;
}

.confirm-btn {
  width: 50%;
  margin-top: 16px;
  background: #18A058;
  color: #fff;
  border: none;
  border-radius: 8px;
  padding: 10px 10px;
  font-size: 14px;
}
.state1 .confirm-btn {
  background: #13C2C2;
}

.confirm-btn[disabled] {
  background: #C9CDD4 !important;
  color: #fff !important;
}

.audio-container {
  position: absolute;
  bottom: 2px; /* 调整底部距离 */
  right: 16px; /* 调整右侧距离 */
  z-index: 1;
  display: flex;
  justify-content: flex-end;
  margin: 8px 0;
}