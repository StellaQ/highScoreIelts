/* 容器 */
.containerBasic {
    padding: 10px;
    background-color: #F5F7FA;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }
  
  /* 头部样式 */
  .header {
    width: 100%;
    box-sizing: border-box;
    background: #fff;
    border-radius: 16px;
    padding: 16px 10px;
    margin-bottom: 16px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  }
  
  .topic-title {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .topic-name {
    font-size: 20px;
    font-weight: 600;
    display: block;
  }
  
  .topic-name-cn {
    font-size: 16px;
    color: #86909C;
    margin-top: 4px;
    display: block;
  }
  
  .topic-status {
    padding: 6px 16px;
    border-radius: 100px;
    font-size: 14px;
    font-weight: 500;
  }
  
  .status-new {
    background: #E8F7E6;
    color: #18A058;
  }
  
  .status-review {
    background: #E8FFFB;
    color: #13C2C2;
  }
  
  .status-done {
    background: #FFE4BA;
    color: #FF8F1F;
  }
  
  /* 问题卡片样式 */
  .question-section {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 16px;
  }
.question-card {
    width: 100%;
    box-sizing: border-box;
    padding: 10px;
    background: #fff;
    border-radius: 16px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    position: relative;
    min-height: 300px;
  }
  /* 卡片容器 */
.card-container {
  width: 100%;
  margin-bottom: 20px;
  display: flex;
  flex-direction: column;
  gap: 15px;
}
.card-all{
  width: 100%;
  position: relative;
  perspective: 1000px; /* 添加透视效果 */
  display: flex;
  flex-direction: column;
}
/* 卡片 */
.card {
  position: relative;
  width: 100%;
  min-height: 300px;
  transform-style: preserve-3d;
  transition: transform 0.6s;
  box-sizing: border-box;
  background: #fff;
  border-radius: 8px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}
/* 卡片翻转效果 */
.card.flipped {
  transform: rotateY(180deg);
}
/* 卡片正反面 */
.card-front{
  position: absolute;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding: 0 10px;
  backface-visibility: hidden;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.card-back {
  position: absolute;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding: 16px;
  backface-visibility: hidden;
  overflow: auto;
  transform: rotateY(180deg);
  display: flex;
  flex-direction: column;
}

/* 按钮容器 */
.button-container {
  display: flex;
  justify-content: center;
  margin-top: 6px;
}
  .question-title {
    font-size: 18px;
    font-weight: 500;
    line-height: 1.6;
    text-align: justify;
    margin: 0 0 10px 0;
  }
  .question-tip {
    font-size: 14px;
    color: #86909C;
    text-align: center;
    margin-bottom: 16px;
  }
  .question-title-cn {
    font-size: 16px;
    color: #86909C;
    /* margin-top: 4px; */
    margin-bottom: 10px;
    display: block;
  }
  
  .answer-content {
    font-size: 18px;
    font-weight: 500;
    line-height: 1.6;
    color: #1D2129;
    text-align: justify;
    margin-bottom: 40px; /* 为播放按钮留出空间 */
  }
  
  .answer-input {
    width: 100%;
    height: 90px !important;
    /* min-height: 40px; */
    border: 1px solid #E5E6EB;
    border-radius: 8px;
    padding: 12px 0;
    margin-bottom: 10px;
    font-size: 16px;
  }
  
  .submit-btn {
    /* position: absolute;
    bottom: 24px;
    right: 24px; */
    background: #18A058;
    color: #fff;
    border: none;
    border-radius: 8px;
    padding: 6px 10px;
    font-size: 14px;
  }
  
  .state1 .submit-btn {
    background: #13C2C2;
  }
  
  .state2 .submit-btn {
    background: #FF8F1F;
  }
  
  /* AI 反馈区域 */
  .ai-feedback {
    margin-top: 16px;
    padding: 16px;
    background: #F8F9FA;
    border-radius: 8px;
    position: relative;
  }
  
  .ai-feedback-title {
    font-size: 16px;
    font-weight: 500;
    color: #1D2129;
    margin-bottom: 12px;
    display: block;
  }
  
  .ai-feedback-content {
    font-size: 14px;
    line-height: 1.6;
    color: #4E5969;
    display: block;
    margin-bottom: 24px;
  }
  
  .feedback-list {
    margin-top: 8px;
    display: flex;
    flex-direction: column;
    gap: 4px;
  }
  
  /* 复习时间选择区域 */
  .review-section {
    background: #fff;
    border-radius: 16px;
    padding: 24px;
    margin-top: 16px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    width: calc(100% - 48px);
  }
  
  .review-title {
    font-size: 16px;
    font-weight: 500;
    margin-bottom: 12px;
    display: block;
  }
  
  .review-options {
    display: flex;
    flex-wrap: no-wrap;
    justify-content: space-between;
    /* gap: 12px; */
    margin-bottom: 16px;
  }
  
  .review-option {
    flex: 0 0 auto;
    padding: 8px 8px;
    border-radius: 100px;
    font-size: 14px;
    background: #F2F7FF;
    color: #86909C;
    text-align: center;
    transition: all 0.3s ease;
  }
  
  /* state=0 的选项样式 */
  .state0 .review-option.selected {
    background: #F2F7FF;
    color: #18A058;
  }
  
  /* state=1 的选项样式 */
  .state1 .review-option.selected {
    background: #F2F7FF;
    color: #13C2C2;
  }
  
  /* state=2 的选项样式 */
  .state2 .review-option.selected {
    background: #F2F7FF;
    color: #FF8F1F;
  }
  
  .review-status {
    font-size: 12px;
    color: #86909C;
    margin-left: 8px;
  }
  
  .next-review-time {
    height: 14px;
    line-height: 14px;
    font-size: 12px;
    color: #86909C;
    margin-top: 16px;
    display: flex;
    align-items: center;
    gap: 4px;
  }
  
