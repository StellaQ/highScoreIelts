<view class="container">
  <view class="header">
    <view class="title">进阶练习</view>
    <view class="subtitle">提升口语表达能力</view>
  </view>

  <view class="content">
    <view class="card" wx:for="{{questions}}" wx:key="index">
      <view class="question-header">
        <text class="question-number">问题 {{index + 1}}</text>
        <text class="timer" wx:if="{{isRecording}}">{{timer}}s</text>
      </view>
      
      <view class="question-content">
        <text>{{item.text}}</text>
      </view>

      <view class="action-buttons">
        <van-button 
          type="primary" 
          block 
          bind:click="startRecording" 
          disabled="{{isRecording}}"
        >开始录音</van-button>
        
        <van-button 
          type="danger" 
          block 
          bind:click="stopRecording" 
          disabled="{{!isRecording}}"
        >结束录音</van-button>
      </view>

      <view class="answer-section" wx:if="{{item.answer}}">
        <view class="answer-title">AI 评分</view>
        <view class="answer-content">{{item.answer}}</view>
      </view>
    </view>
  </view>

  <view class="footer">
    <van-button 
      type="primary" 
      block 
      bind:click="submitExam"
      disabled="{{!canSubmit}}"
    >提交练习</van-button>
  </view>
</view> 