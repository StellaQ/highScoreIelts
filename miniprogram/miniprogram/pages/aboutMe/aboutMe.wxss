.outer-container {
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f8f9fa;
}

.container {
  flex: 1;
  padding: 30rpx;
  padding-bottom: calc(30rpx + 120rpx); /* 增加底部 padding，避免被 tabBar 遮挡 */
  box-sizing: border-box;
  overflow-y: auto;
  overflow-x: hidden;
  width: 100%;
}

/* 用户信息区域 */
.user-section {
  width: 100%;
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  padding: 40rpx 30rpx;
  color: #ffffff;
  border-radius: 24rpx;
  margin-bottom: 30rpx;
  box-sizing: border-box;
}

.user-info {
  display: flex;
  align-items: center;
  gap: 30rpx;
  margin-bottom: 30rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.user-detail {
  flex: 1;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
}

.points-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.points-title {
  font-size: 28rpx;
  opacity: 0.9;
}

.points-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #FFD700;
}

.points-actions {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  margin-top: 20rpx;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 200rpx;
  height: 160rpx;
  background: #f8f8f8;
  border-radius: 16rpx;
  padding: 20rpx;
  box-sizing: border-box;
  transition: all 0.3s ease;
}

.action-item:active {
  background: #f0f0f0;
}

.action-item.checked {
  background: #e8f5e9;
  color: #4caf50;
}

.action-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.action-text {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.action-points {
  font-size: 24rpx;
  color: #4caf50;
  font-weight: bold;
}

/* 训练统计区域 */
.stats-section {
  width: 690rpx;
  background: #ffffff;
  border-radius: 24rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1f2937;
  margin-bottom: 30rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.stat-card {
  background: #f8f9fa;
  padding: 24rpx;
  border-radius: 16rpx;
  text-align: center;
}

.stat-icon {
  font-size: 40rpx;
  margin-bottom: 12rpx;
  display: block;
}

.stat-label {
  font-size: 24rpx;
  color: #6b7280;
  margin-bottom: 8rpx;
  display: block;
}

.stat-value {
  font-size: 32rpx;
  color: #1f2937;
  font-weight: bold;
}

/* 训练计划区域 */
.plan-section {
  width: 690rpx;
  background: #ffffff;
  border-radius: 24rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 30rpx;
}

.plan-card {
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 24rpx;
}

.plan-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.plan-title {
  font-size: 28rpx;
  color: #1f2937;
  font-weight: bold;
}

.plan-progress {
  font-size: 28rpx;
  color: #6366f1;
  font-weight: bold;
}

.plan-content {
  font-size: 26rpx;
  color: #4b5563;
}

.plan-item {
  display: block;
  margin-bottom: 20rpx;
}

.ai-recommend {
  background: #ffffff;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-top: 20rpx;
}

.recommend-title {
  display: block;
  margin-bottom: 12rpx;
  color: #6b7280;
}

.recommend-topic {
  display: block;
  color: #1f2937;
  margin-bottom: 16rpx;
}

.practice-btn {
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  color: #ffffff;
  font-size: 26rpx;
  padding: 12rpx 0;
  border-radius: 100rpx;
  text-align: center;
  border: none;
}

/* 功能列表区域 */
.function-section {
  width: 690rpx;
  background: #ffffff;
  border-radius: 24rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.function-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.function-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
}

.function-icon {
  font-size: 36rpx;
  margin-right: 20rpx;
}

.function-text {
  flex: 1;
  font-size: 28rpx;
  color: #1f2937;
}

.arrow {
  color: #9ca3af;
  font-size: 28rpx;
}

