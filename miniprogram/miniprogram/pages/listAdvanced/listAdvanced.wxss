/* 容器样式 */
.container {
  padding: 32rpx;
  background-color: #F5F7FA;
}

/* 骨架屏动画 */
.shimmer-animation {
  animation: shimmer-move 1.4s ease infinite;
}

@keyframes shimmer-move {
  0% {
    background-position: -200% 0;
  }
  100% {
    background-position: 200% 0;
  }
}

/* 骨架屏基础样式 */
.skeleton {
  background: linear-gradient(90deg, #f2f2f2 25%, #e6e6e6 37%, #f2f2f2 63%);
  background-size: 400% 100%;
  animation: shimmer-move 1.4s ease infinite;
}

.skeleton-text {
  color: transparent !important;
  border-radius: 4rpx;
}

.skeleton-card {
  background: #ffffff !important;
  border: 1rpx solid #f0f0f0 !important;
  opacity: 0.8;
  height: 160rpx;
  padding: 20rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
  box-sizing: border-box;
}

.skeleton-circle {
  width: 96rpx !important;
  height: 96rpx !important;
  border-radius: 50%;
  background: linear-gradient(90deg, #f2f2f2 25%, #e6e6e6 37%, #f2f2f2 63%) !important;
  background-size: 400% 100% !important;
  animation: shimmer-move 1.4s ease infinite;
  flex-shrink: 0;
}

.skeleton-info {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.skeleton-title {
  width: 200rpx;
  height: 40rpx;
}

.skeleton-progress {
  width: 80rpx;
  height: 40rpx;
}

.skeleton-name {
  width: 100%;
  max-width: 160rpx;
  height: 32rpx;
  margin-bottom: 12rpx;
}

.skeleton-stats {
  width: 100%;
  max-width: 120rpx;
  height: 28rpx;
  margin-bottom: 12rpx;
}

.skeleton-tag {
  width: 100%;
  max-width: 100rpx;
  height: 40rpx;
  border-radius: 100rpx;
}

/* 标题栏样式 */
.header {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.progress {
  font-size: 28rpx;
  color: #666;
}

/* 话题卡片网格 */
.topics-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  margin-bottom: 32rpx;
}

/* 话题卡片样式 */
.topic-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.topic-card:active {
  transform: scale(0.98);
  opacity: 0.9;
}

/* 进度圆圈 */
.progress-circle {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 500;
  flex-shrink: 0;
}

/* 话题信息 */
.topic-info {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.topic-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.topic-stats {
  font-size: 24rpx;
  color: #666;
}

/* 状态标签 */
.status-tag {
  display: inline-block;
  padding: 4rpx 16rpx;
  border-radius: 100rpx;
  font-size: 20rpx;
  font-weight: 500;
}

/* 不同状态的颜色 */
.topic-card.new .progress-circle {
  background: #F0F2F5;
  color: #666;
}

.topic-card.new .status-tag {
  background: #F0F2F5;
  color: #666;
}

.topic-card.today .progress-circle {
  background: #E6F7FF;
  color: #1890FF;
}

.topic-card.today .status-tag {
  background: #E6F7FF;
  color: #1890FF;
}

.topic-card.completed .progress-circle {
  background: #F6FFED;
  color: #52C41A;
}

.topic-card.completed .status-tag {
  background: #F6FFED;
  color: #52C41A;
}

.topic-card.future .progress-circle {
  background: #FFF7E6;
  color: #FA8C16;
}

.topic-card.future .status-tag {
  background: #FFF7E6;
  color: #FA8C16;
}

.topic-card.mastered .progress-circle {
  background: #F9F0FF;
  color: #722ED1;
}

.topic-card.mastered .status-tag {
  background: #F9F0FF;
  color: #722ED1;
}
