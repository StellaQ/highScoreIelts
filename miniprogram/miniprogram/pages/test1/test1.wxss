/* 容器样式 */
.container {
  padding: 32rpx;
  background-color: #F5F7FA;
}

/* 标题栏样式 */
.header {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1D2129;
}

.progress {
  font-size: 38rpx;
  font-weight: 600;
  color: #1D2129;
}

/* 话题卡片网格 */
.topics-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

/* 话题卡片基础样式 */
.topic-card {
  border-radius: 24rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  gap: 24rpx;
}

/* 进度圆圈 */
.progress-circle {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: white;
  flex-shrink: 0;
}

.progress-circle text {
  font-size: 24rpx;
  font-weight: 500;
}

/* 话题信息 */
.topic-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.topic-name {
  font-size: 30rpx;
  font-weight: 500;
}

.topic-stats {
  font-size: 24rpx;
}

.status-tag {
  display: inline-block;
  padding: 4rpx 16rpx;
  border-radius: 100rpx;
  font-size: 24rpx;
  background: white;
  margin-top: 8rpx;
  width: fit-content;
}

/* 全新话题样式 */
.new {
  background: #E8F7E6;
  border: 1rpx solid rgba(24, 160, 88, 0.2);
}

.new .progress-circle text {
  color: #18A058;
}

.new .status-tag {
  color: #18A058;
}

/* 今日待复习话题样式 */
.today {
  background: #E8FFFB;
  border: 1rpx solid rgba(19, 194, 194, 0.2);
}

.today .progress-circle text {
  color: #13C2C2;
}

.today .status-tag {
  color: #13C2C2;
}

/* 今日已完成话题样式 */
.completed {
  background: #FFE4BA;
  border: 1rpx solid rgba(255, 143, 31, 0.2);
}

.completed .progress-circle text {
  color: #FF8F1F;
}

.completed .status-tag {
  color: #FF8F1F;
}

/* 待复习话题样式 */
.future {
  background: #F2F3F5;
  border: 1rpx solid #E5E6EB;
}

.future .progress-circle text {
  color: #909399;
}

.future .status-tag {
  color: #909399;
}

/* 完全掌握话题样式 */
.mastered {
  background: #F7B500;
  border: 1rpx solid rgba(135, 77, 0, 0.2);
  color: white;
}

.mastered .progress-circle {
  background: rgba(255, 255, 255, 0.9);
}

.mastered .progress-circle text {
  color: #874D00;
}

.mastered .topic-stats {
  color: rgba(255, 255, 255, 0.9);
}

.mastered .status-tag {
  background: rgba(255, 255, 255, 0.9);
  color: #874D00;
}
