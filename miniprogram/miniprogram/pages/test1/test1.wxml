<view class="container">
  <!-- 骨架屏 -->
  <block wx:if="{{!isLoaded}}">
    <!-- 标题栏骨架屏 -->
    <view class="header">
      <view class="skeleton skeleton-text skeleton-title"></view>
      <view class="skeleton skeleton-text skeleton-progress"></view>
    </view>

    <!-- 话题卡片网格骨架屏 -->
    <view class="topics-grid">
      <view wx:for="{{5}}" wx:key="index" class="topic-card skeleton-card">
        <view class="skeleton skeleton-circle"></view>
        <view class="topic-info">
          <view class="skeleton skeleton-text skeleton-name"></view>
          <view class="skeleton skeleton-text skeleton-stats"></view>
          <view class="skeleton skeleton-text skeleton-tag"></view>
        </view>
      </view>
    </view>
  </block>

  <!-- 实际内容 -->
  <block wx:else>
    <!-- 标题栏 -->
    <view class="header">
      <view class="title">个人信息</view>
      <view class="progress">5/6</view>
    </view>

    <!-- 话题卡片网格 -->
    <view class="topics-grid">
      <!-- 全新话题 -->
      <view class="topic-card new">
        <view class="progress-circle">
          <text>0%</text>
        </view>
        <view class="topic-info">
          <text class="topic-name">Hometown</text>
          <text class="topic-stats">未开始练习</text>
          <text class="status-tag">NEW</text>
        </view>
      </view>

      <!-- 今日待复习话题 -->
      <view class="topic-card today">
        <view class="progress-circle">
          <text>60%</text>
        </view>
        <view class="topic-info">
          <text class="topic-name">Work</text>
          <text class="topic-stats">已练习3次</text>
          <text class="status-tag">今日复习</text>
        </view>
      </view>

      <!-- 今日已完成话题 -->
      <view class="topic-card completed">
        <view class="progress-circle">
          <text>85%</text>
        </view>
        <view class="topic-info">
          <text class="topic-name">Family</text>
          <text class="topic-stats">已练习5次</text>
          <text class="status-tag">今日已完成</text>
        </view>
      </view>

      <!-- 待复习话题 -->
      <view class="topic-card future">
        <view class="progress-circle">
          <text>40%</text>
        </view>
        <view class="topic-info">
          <text class="topic-name">Studysssss</text>
          <text class="topic-stats">已练习3次</text>
          <text class="status-tag">3天后复习</text>
        </view>
      </view>

      <!-- 完全掌握话题 -->
      <view class="topic-card mastered">
        <view class="progress-circle">
          <text>100%</text>
        </view>
        <view class="topic-info">
          <text class="topic-name">Hobby</text>
          <text class="topic-stats">已练习8次</text>
          <text class="status-tag">完全掌握</text>
        </view>
      </view>
    </view>
  </block>
</view>
